extends head
block variables
  - var test='test value'
block content
  div.welcomeMessage
    div.userPage
      div.container-sm.bg-white.py-2
        div.userPage
          div.flex-container
            div.text-center 
              h3 #{viewTitle}
            div.clearfix  
            if msg
              p.alert-success #{msg}
            if error
              p.alert-danger #{error}
            div.userContentBlock
              //-p 
                img(src=`${pic}` alt='Profile Image')
            form#addForm.text-center(action='/login' method='POST' autocomplete='on')
              div.input-group.mb-2
                div.input-group-prepend
                  div.input-group-text 
                    i.fas.fa-envelope
                input.form-control(type='text' name='email' placeholder='Email' value='' required autofocus)
              div.input-group.mb-2
                div.input-group-prepend
                  div.input-group-text 
                    i.fas.fa-lock
                input.form-control(id='pwd' label='Password' type='password' name='password' placeholder='Password' value='' autocomplete="off" required )
                div.input-group-append
                  div.input-group-text 
                    i(toggle="#password-field" class="fa fa-eye-slash field_icon toggle-password")
              div#loginButton
                button.align-self-center.btn.btn-lg.btn-success.mb-1(type='submit') LOGIN
                p.small.m-0
                  a(href='/signup') or sign Up