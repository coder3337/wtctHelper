extends head
block variables
  - var test='test value'
block content
  div.welcomeMessage
    div.userPage
      div.container-sm.bg-white.py-2
        div.view.userPage
          div.flex-container
            div.text-center 
              h3 #{viewTitle}
            div.clearfix  
            if msg
              p.alert-success #{msg}
            if error
              p.alert-danger #{error}
            div.userContentBlock
              //-p 
                img(src=`${pic}` alt='Profile Image')
            form#addForm.text-center(action='/login' method='POST' autocomplete='on')
              //-label Email
              input.form-control.mb-2(type='text' name='email' placeholder='Email' value='' required autofocus)
              //-label Password
              input.form-control.mb-2(label='Password' type='text' name='password' placeholder='Password' value='' autocomplete="off" required )
              div#loginButton
                button.align-self-center.btn.btn-lg.btn-success.mb-1(type='submit' ) LOGIN
                p.small.m-0
                  a(href='/signup') or sign Up